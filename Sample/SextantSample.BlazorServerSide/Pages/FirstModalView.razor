@inherits ReactiveComponentBase<FirstModalViewModel>
<h3>FirstModalView</h3>

<button class="btn-primary" @onclick="()=>ViewModel?.OpenModal.Execute().Catch(Observable.Return(Unit.Default)).Subscribe()">Second Modal</button>
<button class="btn-primary" @onclick="()=>ViewModel?.PopModal.Execute().Catch(Observable.Return(Unit.Default)).Subscribe()">Pop Modal</button>

@code {
    [Inject] IJSRuntime jSRuntime { get; set; }

    protected override Task OnInitializedAsync()
    {
        Interactions
                .ErrorMessage
                .RegisterHandler(async x =>
                {
                    await jSRuntime.InvokeVoidAsync("alert", x.Input.Message);
                    x.SetOutput(true);
                });
        return Task.CompletedTask;
    }
}
